<% if defined?(current_organization) && current_organization && other_organizations.any? %>
  <div data-controller="org-switcher" class="mb-4">
    <label for="org-switcher-select" class="block text-sm font-medium text-gray-700 mb-2">
      Switch Organization
    </label>
    <select 
      id="org-switcher-select" 
      data-org-switcher-target="select"
      data-action="change->org-switcher#change"
      class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
    >
      <option value=""><%= current_organization.name %> (Current)</option>
      <% other_organizations.each do |org| %>
        <option value="<%= org.id %>"><%= org.name %></option>
      <% end %>
    </select>
  </div>
<% end %>