<div class="page">
  <div class="page__header">
    <h1>Edit Adjustment for <%= @account.name %></h1>
  </div>

  <div class="page__content">
    <div class="page__card">
      <p class="text-muted">
        Modifying this adjustment will update the account's balance accordingly.
      </p>

      <%= form_with(model: [@account, @adjustment], local: true, class: "form") do |form| %>
        <%= render "form", form: form %>
        
        <div class="form__actions">
          <%= form.submit "Update Adjustment", class: "btn btn--primary" %>
          <%= cancel_button @account %>
        </div>
      <% end %>
    </div>
  </div>
</div>